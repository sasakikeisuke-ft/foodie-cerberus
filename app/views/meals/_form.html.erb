<%= form_with model: @meal, local: true do |f| %>
  <div class="form-group">
    <%= f.label :name, '料理名' ,class: "form-label" %>
    <%= f.text_field :name, autofocus: true, placeholder: '料理名', class: "form-control" %>
    <div class="invalid-feedback">
      料理名を入力してください。
    </div>
  </div>
  <div>値段の選択</div>
  <% price_index = Price.all %>
  <% price_index.each do |price| %>
    <div class="form-check">
      <%= f.radio_button :price_id, price.id, class: "form-check-input" %>
      <%= f.label :price_id, price.select ,class: "form-check-label" %>
    </div>
  <% end %>
  <div>カロリーの選択</div>
  <% calorie_index = Calorie.all %>
  <% calorie_index.each do |calorie| %>
    <div class="form-check">
      <%= f.radio_button :calorie_id, calorie.id, class: "form-check-input" %>
      <%= f.label :calorie_id, calorie.select ,class: "form-check-label" %>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :link, '外部サイトへのリンク' ,class: "form-label" %>
    <%= f.text_area :link, autofocus: true, placeholder: '外部サイトへのリンク 不要であれば空欄のままで可', class: "form-control" %>
  </div>
  <%= f.hidden_field :last_day, value: Date.today %>
  <div class="form-group">
    <hr class="my-4">
    <%= f.submit "登録する", class: "w-100 btn btn-primary btn-md" %>
  </div>
<% end %>
