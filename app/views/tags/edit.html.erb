tags#edit
<div class="container-md">
  <div class="row">
    <div class="py-5 text-center">
      <h2>タグの登録情報の編集</h2>
      <h2>-> <%= @tag.name %></h2>
    </div>
    <div class="col-lg-12">
      <%= render partial: "form" %>
    </div>
    <hr class="my-4">
    <div class="col">
      <%= link_to 'このタグを削除する', tag_path(@tag), method: :delete, class: "btn btn-warning" %>
    </div>
  </div>
</div>