<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <body class="bg-light">
    <div class="container">
      <main>
        <div class="py-5 text-center">
          <h2>新規登録</h2>
        </div>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="row g-3">
          <div class="col-md-7 col-lg-12">
            <h4 class="mb-3">登録者情報</h4>
            <p>ユーザー情報を登録します。</p>
            <div class="col-sm-12">
              <div class="form-group">
                <%= f.label :nickname, 'ニックネーム', class: "form-label" %><br/>
                <%= f.text_field :nickname, autofocus: true, class: "form-control" %>
              </div>
              <div class="invalid-feedback">
                ニックネームを入力してください。
              </div>
              <div class="form-group">
                <%= f.label :email, class: "form-label" %><br/>
                <%= f.email_field :email, autocomplete: "email", class: "form-control", id: "email" %>
                <div class="invalid-feedback">
                  有効なメールアドレスを入力してください。
                </div>
              </div>
              <div class="form-group">
                <%= f.label :password, class: "form-label" %>
                <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
                <div class="invalid-feedback">
                  有効なパスワードを入力してください。
                </div>
              </div>
              <div class="form-group">
                <%= f.label :password_confirmation, class: "form-label" %>
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
                <div class="invalid-feedback">
                  有効なパスワードを入力してください。
                </div>
              </div>
              <div class="form-group">
              <hr class="my-4">
              <%= f.submit "登録する", class: "w-100 btn btn-primary btn-md" %>
            </div>

          </div>
        </div>
      </main>
    </div>
  </body>
<% end %>
<%= render "devise/shared/links" %>

